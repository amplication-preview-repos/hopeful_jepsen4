datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Photo {
  createdAt DateTime @default(now())
  event     Event?   @relation(fields: [eventId], references: [id])
  eventId   String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  url       String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Event {
  attendances Attendance[]
  createdAt   DateTime     @default(now())
  date        DateTime?
  id          String       @id @default(cuid())
  location    String?
  name        String?
  photos      Photo[]
  updatedAt   DateTime     @updatedAt
}

model Attendance {
  createdAt DateTime @default(now())
  event     Event?   @relation(fields: [eventId], references: [id])
  eventId   String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  attendances Attendance[]
  createdAt   DateTime     @default(now())
  email       String?      @unique
  firstName   String?
  id          String       @id @default(cuid())
  lastName    String?
  password    String
  photos      Photo[]
  roles       Json
  updatedAt   DateTime     @updatedAt
  username    String       @unique
}
